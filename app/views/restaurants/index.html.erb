<div class="container">
  <h1>Restaurants</h1>
  <div class="cards">
    <% @restaurants.each do |restaurant| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://picsum.photos/id/<%= rand(1..500) %>/400/500)">
        <%= restaurant.name %>
        <%= link_to '', restaurant_path(restaurant), class: "card-category-link" %>
      </div> 
    <% end %>
  </div>
</div>
